<div class="container-fluid register-container">
	<div class="row resigter-form-wrapper">
		<div class="col-12 col-md-4 offset-md-1">
			<h1><%= t(".Resend_unlock_instructions")%></h1>

			<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <br />
			    <%= f.email_field :email, autofocus: true, placeholder: t(".email") , class: "input-text" %>
			  </div>
			  <br><br>

			  <div class="actions">
			    <%= f.submit t(".Resend_unlock_instructions") %>
			  </div>
			  <br><br>
			<% end %>

			<%= render "users/shared/links" %>
		</div>
	</div>
</div>

<% assign_meta_tags title: t(".meta_title"),
                    description: t(".meta_description"),
                    keywords: t(".meta_keywords") %>