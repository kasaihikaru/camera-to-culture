<div class="container-fluid register-container">
	<div class="row resigter-form-wrapper">
		<div class="col-12 col-md-4 offset-md-1">
			<h1><%= t(".Resend_confirmation_instructions")%></h1>

			<%= link_to to_receive_email_helps_path, class: "" do %>
        <%= t(".Why_didn't_I_get_email?") %>
      <% end %>

			<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="field">
			    <br>
			    <%= f.email_field :email, autofocus: true, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), placeholder: t(".email") , class: "input-text"  %>
				</div>
				<br><br>

			  <div class="actions">
			    <%= f.submit t(".Resend_confirmation_instructions") %>
			  </div>
			  <br><br>
			<% end %>

			<%= render "users/shared/links" %>
		</div>
	</div>
</div>


<% assign_meta_tags title: t(".meta_title"),
                    description: t(".meta_keywords"),
                    keywords: t(".meta_description") %>