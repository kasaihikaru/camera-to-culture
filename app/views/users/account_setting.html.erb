<div class="container-fluid mypage-container">
  <div class="col-12 mypage-menu">
    <%= render :partial => 'users/mypage_menu', :locals=>{page: "user-account"} %>
  </div>

  <div class="row">
    <div class="col-12 col-md-8 offset-md-2 mypage-content">
      <h1><%= t(".Account_settings")%></h1>
      <hr>

      <%= form_for(@user, url: inactive_account_users_path, html: { method: :put }) do |f| %>

        <ul>
          <li><%= t(".cancel_account_explanation1") %></li><br>
          <li><%= t(".cancel_account_explanation2") %></li><br>
          <li><%= t(".cancel_account_explanation3") %></li>
        </ul>

        <!-- Button trigger modal -->
        <button type="button" class="white-btn" data-toggle="modal" data-target="#cancel_account_modal">
          <%= t(".Cancel_account") %>
        </button>

        <!-- Modal -->
        <div class="modal fade" id="cancel_account_modal" tabindex="-1" role="dialog" aria-labelledby="cancel_account_modalTitle" aria-hidden="true">
          <div class="modal-dialog modal-dialog-centered" role="document">
            <div class="modal-content">
              <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle"><%= t(".Cancel_account") %></h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
              </div>
              <div class="modal-body">
                <ul>
                  <li><%= t(".cancel_account_explanation1") %></li><br>
                  <li><%= t(".cancel_account_explanation2") %></li><br>
                  <li><%= t(".cancel_account_explanation3") %></li>
                </ul>
              </div>
              <div class="modal-footer">
                <button type="button" class="white-btn" data-dismiss="modal"><%= t(".Dont_cancel_account") %></button>
                <%= f.submit t(".Cancel_account"), class: "white-btn" %>
              </div>
            </div>
          </div>
        </div>

      <% end %>
    </div>
  </div>
</div>

<% assign_meta_tags title: t(".meta_title"),
                    description: t(".meta_description"),
                    keywords: t(".meta_keywords") %>
<% set_meta_tags noindex: true %>